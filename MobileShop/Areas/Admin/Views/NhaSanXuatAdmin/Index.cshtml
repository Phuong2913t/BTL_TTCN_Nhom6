@model IEnumerable<ShopOnlineConnection.NhaSanXuat>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_MainLayoutAdmin.cshtml";
}

<style>
    table {
        border-collapse: collapse;
        width: 50%;
        margin: auto;
    }

    th, td {
        text-align: left;
        padding: 8px;
    }

    tr:nth-child(even) {
        background-color: #5d5e63
    }

    th {
        background-color: #2a9fd6;
        color: white;
    }
    table img{
        width: 20px;
        height:20px;
    }
</style>
    <h2>Quản lý nhà sản xuất</h2>

    <table>
        <tr>
            <th>Mã nhà sản xuất</th>
            <th>Tên nhà sản xuất</th>
            <th>Tình trạng</th>
            <th colspan="2">
                <a href="@Url.Action("Create", "NhaSanXuatAdmin")"><img src="~/Asset/images/Add.png" style="margin-left: 25%;" /></a>
            </th>
        </tr>
        @{
            foreach(var item in Model)
            {
                 <tr>
                    <td>@item.MaNhaSanXuat</td>
                    <td>@item.TenNhaSanXuat</td>
                    <td>@item.TinhTrang</td>
                    <td><img src="~/Asset/images/EditIcon.png" /></td>
                    <td><img src="~/Asset/images/Delete.png" /></td>
                </tr>
            }
        }
        
        
    </table>

