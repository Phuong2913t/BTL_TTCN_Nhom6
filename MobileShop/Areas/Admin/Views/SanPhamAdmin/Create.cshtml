@model ShopOnlineConnection.SanPham
@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_MainLayoutAdmin.cshtml";
}
<style>
input[type=text]{
        width: 100%;
        background: black;
        padding: 12px 20px;
        margin: 8px 0;
        display: inline-block;
        border: 1px solid white;
        border-radius: 4px;
        box-sizing: border-box;
    }
    input[type=number] {
        width: 100%;
        background: black;
        padding: 12px 20px;
        margin: 8px 0;
        display: inline-block;
        border: 1px solid white;
        border-radius: 4px;
        box-sizing: border-box;
    }
    input[type=submit] {
        width: 100%;
        background-color: #2a9fd6;
        color: white;
        padding: 14px 20px;
        margin: 8px 0;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

        input[type=submit]:hover {
            background-color: #45a049;
        }

</style>
<script src="~/Areas/AssetAdmin/js/product/previewFile.js"></script>
<h2>Create</h2>
@using (Html.BeginForm("Create", "SanPhamAdmin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
<table style="width:70%; margin: auto; background: black;">
    <tr>
        <td>Mã sản phẩm</td>
        <td><input type="text" name="MaSanPham" style="width: 300px; float: left;" maxlength="11" required/></td>
        <td rowspan="9">
            <img src="#" id="output" class="img" style="float: right; width: 255px; height: 405px; margin-left: 30px;" alt="Your image" />
        </td>
    </tr>
    <tr>
        <td>Mã loại sản phẩm</td>
        <td>
            @Html.DropDownList("MaLoaiSanPham", null, new {@style = "float: left; width: 300px; height: 35px; background: black;"})
        </td>
    </tr>
    <tr>
        <td>Tên sản phẩm</td>
        <td><input type="text" name="TenSanPham" style="width: 300px; float: left;" maxlength="11" required/></td>
    </tr>
    <tr>
        <td>Hình chính</td>
        <td><input type="file" id="file_Hinh" name="HinhChinh" style="float: left;" onchange="previewFile(event)" /></td>
    </tr>
    <tr>
        <td>Hình 1</td>
        <td><input type="file" id="file_Hinh1" name="Hinh1" style="float: left;"/></td>
    </tr>
    <tr>
        <td>Hình 2</td>
        <td><input type="file" id="file_Hinh2" name="Hinh2" style="float: left;"/></td>
    </tr>
    <tr>
        <td>Hình 3</td>
        <td><input type="file" id="file_Hinh3" name="Hinh3" style="float: left;"/></td>
    </tr>
    <tr>
        <td>Hình 4</td>
        <td><input type="file" id="file_Hinh4" name="Hinh4" style="float: left;"/></td>
    </tr>
    <tr>
        <td>Giá</td>
        <td><input type="number" name="Gia" style="width: 300px; float: left;" required/></td>
    </tr>
    <tr>
        <td>Ghi chú</td>
        <td><input type="text" name="GhiChu" style="width: 300px; float: left;" required/></td>
    </tr>

    <tr>
        <td>Nhà sản xuất</td>
        <td>
            @Html.DropDownList("MaNhaSanXuat", null, new {@style = "float: left; width: 300px; background: black;" })
        </td>
    </tr>
    <tr>
        <td style="width:300px;">Cấu hình</td>
        <td colspan="2"><textarea class="ckeditor" name="CauHinh" style="width:300px; height:150px; max-width: 100px;max-height: 600px;" rows="4" cols="30"></textarea></td>
    </tr>
    <tr>
        <td colspan="3">
            <input type="submit" name="btn_ThemDienThoai" value="Hoàn tất thêm điện thoại" style="width: 300px; margin-left:32%; background: #016ABC; color: #fff; border: 1px solid #eee; border-radius:20px; box-shadow:5px 5px 5px #eee;" />
        </td>
    </tr>
</table>
}

